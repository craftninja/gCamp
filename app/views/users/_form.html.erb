<% if @user.errors.any? %>
  <div class="row">
    <div class="col-md-offset-2 col-md-7">
      <div class="alert alert-danger">
        <h3><%= pluralize(@user.errors.count, "error") %> prohibited this form from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>

<%= form_for @user, html: {class: 'form-horizontal'} do |f| %>
  <div class='form-group'>
    <%= f.label :first_name, 'First Name', class: 'col-md-2 control-label' %>
    <div class='col-md-6'>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :last_name, 'Last Name', class: 'col-md-2 control-label' %>
    <div class='col-md-6'>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :email, class: 'col-md-2 control-label' %>
    <div class='col-md-6'>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit form_button, class: 'btn btn-primary' %>
      <%= link_to "Cancel", users_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
