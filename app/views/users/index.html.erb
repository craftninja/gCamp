<div class="page-header">
  <div class="pull-right">
    <%= link_to 'New User', new_user_path, class: 'btn btn-info' %>
  </div>
  <h1>Users</h1>
</div>

<table class="table">
  <thead>
    <th>
      Name
    </th>
    <th>
      Email
    </th>
    <th>
    </th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <%= link_to user.full_name, user_path(user) %>
      </td>
      <td>
        <%= mail_to user.email if current_user_or_admin(user) %>
      </td>
      <td>
        <div class="text-right">
          <%= link_to 'Edit', edit_user_path(user) if current_user_or_admin(user) %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
