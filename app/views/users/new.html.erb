<h1 class="page-header">New User</h1>

<%= form_for @user, html: {class: 'form-horizontal'} do |f| %>
  <div class='form-group'>
    <%= f.label :first_name, "First Name", class: 'col-md-2 control-label' %>
    <div class='col-md-6'>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :last_name, "Last Name", class: 'col-md-2 control-label' %>
    <div class='col-md-6'>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :email, class: 'col-md-2 control-label' %>
    <div class='col-md-6'>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Create User", class: 'btn btn-primary' %>
      <%= link_to "Cancel", users_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
