<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div class="well">
      <h3 class="page-header">Sign up for gCamp!</h3>
      <%= form_tag signup_path, method: :post do %>
        <div class="form-group">
          <%= label_tag :first_name, 'First Name' %>
          <%= text_field_tag :first_name, '', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= label_tag :last_name, 'Last Name' %>
          <%= text_field_tag :last_name, '', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= label_tag :email, 'Email' %>
          <%= text_field_tag :email, '', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= label_tag :password, 'Password' %>
          <%= password_field_tag :password, '', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= label_tag :password_confirmation, 'Password Confirmation' %>
          <%= password_field_tag :password_confirmation, '', class: 'form-control' %>
        </div>
        <%= submit_tag 'Sign Up', class: 'btn btn-default' %>
      <% end %>
    </div>
  </div>
</div>
