<div class="page-header">
  <div class="pull-right">
    <%= link_to 'New Task', new_project_task_path(@project), class: 'btn btn-info' %>
  </div>
  <h1>Tasks</h1>
</div>

<table class="table">
  <thead>
    <th>
      Description
    </th>
    <th>
      Due On
    </th>
    <th>
    </th>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td>
          <div>
            <% if task.completed %>
              <s><%= link_to task.description, project_task_path(@project, task) %></s>
            <% else %>
              <%= link_to task.description, project_task_path(@project, task) %>
            <% end %>
          </div>
        </td>
        <td>
          <% if task.due_date %>
            <%= task.due_date.strftime('%-m/%-d/%Y') %>
          <% end %>
        </td>
        <td>
          <div class="text-right">
            <%= link_to 'Edit', edit_project_task_path(@project, task), class: "btn btn-info" %>
            <%= link_to 'Delete', project_task_path(@project, task), method: :delete, class: "btn btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
