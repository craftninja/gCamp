<div class="page-header">
  <div class="pull-right">
    <%= link_to 'New Task', new_task_path, class: 'btn btn-info' %>
  </div>
  <h1>Tasks</h1>
</div>

<table class="table">
  <thead>
    <th>
      Description
    </th>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr><td class="row">
        <div class="col-md-6">
          <%= link_to task.description, task_path(task) %>
        </div>
        <div class="text-right col-md-offset-6">
          <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>
          <%= link_to 'Delete', task_path(task), method: :delete, class: "btn btn-danger" %>
        </div>
      </td></tr>
    <% end %>
  </tbody>
</table>
