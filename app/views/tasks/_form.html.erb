<%= form_for @task, html: {class: 'form-horizontal'} do |f| %>
  <div class='form-group'>
    <%= f.label :description, class: 'col-md-2 control-label' %>
    <div class='col-md-6'>
      <%= f.text_field :description, class: 'form-control' %>
    </div>
  </div>
  <% if @task.id %>
    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <div class="checkbox">
          <label>
            <%= f.check_box :completed %> Completed
          </label>
        </div>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit form_button, class: 'btn btn-primary' %>
      <%= link_to "Cancel", tasks_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
