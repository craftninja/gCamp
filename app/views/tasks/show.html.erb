<div class="page-header">
  <div class="pull-right">
    <%= link_to 'Edit', edit_task_path, class: 'btn btn-info' %>
  </div>
  <h1>
    <% if @task.completed %>
      <s><%= @task.description %></s>
    <% else %>
      <%= @task.description %>
    <% end %>
  </h1>
</div>

<ol class='breadcrumb'>
  <li><%= link_to 'Tasks', tasks_path %></li>
  <li><%= @task.description %></li>
</ol>

<% if @task.due_date %>
  <p><strong>Due on:</strong> <%= @task.due_date.strftime('%-m/%-d/%Y') %></p>
<% end %>
